blue = #0A71B4
light-blue = #6FABD0
orange = #FAB647
bg-hero-pic = "../img/bg-hero.jpg"

form-width = 400px

@import 'bower_components/nib'

#menu
	position fixed
	top 0
	width 100%
	background rgba(256,256,256,.5)

body
	font-family: 'Raleway', sans-serif;
	font-weight 300
	font-size 18px
	label
		font-weight 300

h1,h2
	font-family 'Pathway Gothic One', sans-serif;
	
h2
	font-size 33px
	font-weight bold

nav
	margin-top 1em
	text-align left
	z-index 256
  position relative

