select
	color: black;
	width: form-width;
	padding: 5px;
	font-size: 16px;
	line-height: 1;
	border: 0;
	-webkit-border-radius: 0;
	border-radius: 0;
	height: 45px;
	
.bordino-mail
	border 1px solid white
	padding 0 20px 20px 20px
	border-radius 10px
	width: 500px;
	margin: 0 auto;
	
footer
	display inline-block
	width 100%
	background blue
	color white	
	.icons
		font-size 30px
		a
			color white
			&:focus
				outline none

@media screen and (max-width: 610px)
	.bordino-mail
		border none
		padding 0
		border-radius 0
		width: auto
		margin: auto;
	
	#hero
		.logo
			width 80%
		h1
			font-size 40px
	#hero, .mc-field-group	
		input, select
			width 100%