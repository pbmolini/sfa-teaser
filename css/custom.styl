		width 100%
		height hero-height
		z-index 1
		top 0
	.container
		position relative
		z-index 256
		text-align center
	h1, h2, h3
		color white
		font-weight 300
	h1
		margin 0 auto
		padding .3em 0 0 padding-hero
		// text-transform uppercase
		// font-weight 800
		font-size 50px
	h3
		line-height: 1.3em;
		padding-left padding-hero
		margin-top 1.2em
		margin-bottom .5em
	label
		margin-top .6em
		margin-bottom .4em
	h3, label
		font-size 20px
		letter-spacing 1px

ul, li
	list-style-type none
	padding 0
	
#users
	background white
	color blue
	position relative
	padding 2em 0

#hero .container #mc_embed_signup
	padding-left: padding-hero;

.mc-field-group
	float left
	label
		margin-top: .3em;
	input
		padding 10px 7px
		height 45px
		border-radius: 5px
		border 0
		width form-width
		border 2px solid #d8d8d8
		background white

.btn-mailchimp
	color white
	background orange
	margin-top 1em
	&:hover
		color blue

.pattern
	opacity .2
	height 100%
	width 100%
	position absolute
	top 0
	left 0
	
.bottom-call
	color white
	background: light-blue
	padding 2em
	position relative
	
.centrati
	margin 0 auto 2em auto
	width 477px
	
.mc-field-group
	float none
	color white
	input
		color black

.description-icon
	img
		width 25%
		display inline-block

